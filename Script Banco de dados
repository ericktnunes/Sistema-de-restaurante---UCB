CREATE DATABASE Restaurante;
USE Restaurante;

CREATE TABLE Cardapio (
    ID_itens int PRIMARY KEY,
    Categoria_item varchar(20),
    Descricao_item varchar(200),
    Preco_item double,
    Nome_item varchar(50)
);

